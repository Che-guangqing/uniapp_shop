<view class="wrapper"><view class="box"><view class="address_info">地址信息</view><input class="inp" placeholder="收货人姓名(请使用真实姓名)" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/><input class="weui-input inp" placeholder="手机号码" auto-fill="address_info.phone" data-event-opts="{{[['input',[['__set_model',['','tel','$event',[]]]]]]}}" value="{{tel}}" bindinput="__e"/><text hidden="{{!(!addressFlag)}}" class="telFlag">请输入正确的电话号码</text><picker class="inp" mode="region" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view>{{txt}}</view></picker><input class="inp" placeholder="街道,小区门牌灯详细地址" data-event-opts="{{[['input',[['__set_model',['','address','$event',[]]]]]]}}" value="{{address}}" bindinput="__e"/><text hidden="{{!(!addressFlag)}}" class="addressFlag">请输入有效地址</text><button class="submitBtn" type="warn" data-event-opts="{{[['tap',[['addAddress',['$event']]]]]}}" bindtap="__e">保存</button></view></view>