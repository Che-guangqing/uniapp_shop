
.wrapper {
	width: 100%;
	height: 1334rpx;
	background-color: #f6f6f6;
}
.box {
	margin-bottom: 20rpx;
	box-sizing: border-box;
	width: 100%;
	background-color: #FFFFFF;
	width: 100%s;
	height: 232rpx;
}

/* info */
.info {
	padding: 0 30rpx;
	border-bottom: 2rpx solid #ededed;
	height: 136rpx;
}
.info_row {
	margin-top: 30rpx;
	font-size: 29rpx;
	color: #3B3B3B;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.info_name {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.info_tel {
	width: 170rpx;
}
.address {
	margin-top: 30rpx;
	font-size: 24rpx;
	color: #666666;
}

/* btn */
.btn {
	padding: 0 30rpx;
	font-size: 24rpx;
	height: 96rpx;
	line-height: 96rpx;
}
.btn_row {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.flex1 {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.btn_sure {
	width: 38rpx;
	height: 38rpx;
	margin-right: 20rpx;
}
.btn_del {
	width: 50rpx;
